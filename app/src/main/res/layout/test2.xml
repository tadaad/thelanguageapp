<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Choose A Path to Mastery"
            android:textColor="#1E88E5"
            android:textSize="25dp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="361dp"
            android:layout_height="168dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="20dp"
            android:outlineAmbientShadowColor="#039BE5"
            android:outlineSpotShadowColor="#1E88E5"

            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="71dp"
                    android:layout_height="157dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/gc" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="179dp"
                    android:layout_height="142dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:text="New to German? Start here with basics "
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/aa"
            android:layout_width="358dp"
            android:layout_height="153dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:outlineAmbientShadowColor="#039BE5"
            android:outlineSpotShadowColor="#1E88E5"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">


            <LinearLayout
                android:id="@+id/hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="31dp"
                    android:layout_height="139dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/gcc" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="133dp"
                    android:layout_height="112dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:text="Already know Some German? try this placement test "
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>